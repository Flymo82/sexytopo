<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.hwyl.sexytopo" >

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/laser_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.hwyl.sexytopo.control.activity.TableActivity"
            android:label="@string/title_activity_table" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.hwyl.sexytopo.control.activity.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="org.hwyl.sexytopo.control.activity.PlanActivity"
            android:label="@string/title_activity_plan" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.hwyl.sexytopo.control.activity.ExtendedElevationActivity"
            android:label="@string/title_activity_elevation" >
        </activity>
        <activity
            android:name="org.hwyl.sexytopo.control.activity.DeviceActivity"
            android:label="@string/title_activity_device" >
        </activity>
        <activity
            android:name="org.hwyl.sexytopo.control.activity.StartUpActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />

                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.hwyl.sexytopo.control.activity.SurveyActivity"
            android:label="@string/title_activity_survey" >
        </activity>
        <activity
            android:name="org.hwyl.sexytopo.control.activity.GuideActivity"
            android:label="@string/title_activity_guide"
            android:parentActivityName="org.hwyl.sexytopo.control.activity.SexyTopoActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="org.hwyl.sexytopo.control.activity.SexyTopoActivity" />
        </activity>
    </application>

</manifest>
